{
  "name": "webhook-toolkit",
  "displayName": "Webhook Toolkit",
  "description": "A VSCode extension for developing with webhooks",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "webhookTool.test",
        "title": "Test Webhook Extension"
      },
      {
        "command": "webhookTool.showConfig",
        "title": "Show Webhook Configuration"
      },
      {
        "command": "webhookTool.startServer",
        "title": "Start Webhook Server"
      },
      {
        "command": "webhookTool.stopServer",
        "title": "Stop Webhook Server"
      }
    ],
    "configuration": {
      "title": "Webhook Toolkit",
      "properties": {
        "webhookTool.server.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port number for the webhook server"
        },
        "webhookTool.server.autoFindPort": {
          "type": "boolean",
          "default": true,
          "description": "Automatically find an available port if the specified port is in use"
        },
        "webhookTool.server.responseCode": {
          "type": "number",
          "default": 201,
          "minimum": 200,
          "maximum": 299,
          "description": "HTTP response code to return for webhook requests"
        },
        "webhookTool.server.responseHeaders": {
          "type": "object",
          "default": {},
          "description": "HTTP response headers to include in webhook responses",
          "additionalProperties": {
            "type": "string"
          }
        },
        "webhookTool.server.responseBody": {
          "type": "string",
          "default": "",
          "description": "HTTP response body to return for webhook requests"
        },
        "webhookTool.storage.maxRequests": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 10000,
          "description": "Maximum number of webhook requests to store in memory"
        }
      }
    }
  },
  "author": "Edward Kelly <eddie@sektek.net>",
  "repository": {
    "type": "git",
    "url": "git@github.com:sektek/webhook-toolkit-extension.git"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build": "tsc -p ./",
    "lint": "eslint . --cache",
    "test": "mocha",
    "test:cover": "c8 npm run test"
  },
  "dependencies": {
    "express": "^5.1.0",
    "uuid": "^11.1.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@sektek/eslint-plugin": "1.0.1",
    "@sektek/prettier-config": "1.1.3",
    "@types/chai": "^5.2.0",
    "@types/chai-as-promised": "^8.0.1",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.102.0",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^8.57.0",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "prettier": "^3.4.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
